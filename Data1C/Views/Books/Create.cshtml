@model Data1C.Model.Book

@{
    ViewData["Title"] = "Create";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}
<h2>Create</h2>
<h4>Book</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-control">
                <label asp-for="BookCode" class="form-control-plaintext"></label>
                <input asp-for="BookCode" class="form-check-input"/>
                <span asp-validation-for="BookCode" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">BackToList</a>
</div>

@section Sripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptPartial");
    }
}